<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@drawable/profile_bg"
		tools:context=".CartActivity">

	<TextView
			android:text="Your cart is empty "
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/textView13" tools:layout_editor_absoluteY="298dp"
			app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
			app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
	<TextView
			android:text="5 Items"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/colorWhite"
			android:id="@+id/textView10" android:layout_marginTop="24dp"
			app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="16dp"/>
	<TextView
			android:text="â‚¹ 5,000"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/colorWhite"
			android:id="@+id/textView11" android:layout_marginTop="8dp"
			app:layout_constraintTop_toBottomOf="@+id/textView10" app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="16dp"/>
	<TextView
			android:text="Cart"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="30sp"
			android:textStyle="bold"
			android:textColor="@color/colorWhite"
			android:id="@+id/textView12" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="16dp" android:layout_marginTop="24dp"
			app:layout_constraintTop_toTopOf="parent"/>
	<androidx.recyclerview.widget.RecyclerView
			android:layout_width="0dp"
			android:layout_height="0dp"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
			app:layout_constraintTop_toBottomOf="@+id/textView11"
			android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/button"/>
	<Button
			android:text="Proceed to Checkout"
			android:layout_width="300dp"
			android:layout_height="wrap_content"
			android:id="@+id/button"
			android:textColor="@color/colorWhite"
			android:background="@drawable/login_bt_bg"
			app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="17dp"
			app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
			app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>